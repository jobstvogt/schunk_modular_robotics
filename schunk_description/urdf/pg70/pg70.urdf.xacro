<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find schunk_description)/urdf/pg70/pg70.gazebo.xacro" />
  <xacro:include filename="$(find schunk_description)/urdf/pg70/pg70.transmission.xacro" />

  <xacro:macro name="schunk_pg70" params="parent name *origin">

    <joint name="${name}_gripper_joint" type="fixed" >
      <parent link="${parent}" />
      <child link="${name}_gripper_link" />
      <xacro:insert_block name="origin" />
    </joint>

    <link name="${name}_gripper_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
      </inertial>
      <visual>
      	<origin xyz="0 0 0.0075" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://schunk_description/meshes/pg70/pg70.dae" />
        </geometry>
        <material name="blue">
          <color rgba="0 0 1 1"/>
        </material>
      </visual>
      <collision>
      	<origin xyz="0 0 0.0075" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://schunk_description/meshes/pg70/pg70.dae" />
        </geometry>
        <material name="blue">
          <color rgba="0 0 1 1"/>
        </material>
      </collision>
    </link>


    <joint name="${name}_finger_left_joint" type="prismatic" >
      <parent link="${name}_gripper_link" />
      <child link="${name}_finger_left_link" />
      <limit effort="100" lower="-0.001" upper="0.033" velocity="0.01"/>

      <origin xyz="0 0.01 ${0.078}" rpy="0 0 0"/>
      <axis xyz="0 1 0" />
    </joint>

    <link name="${name}_finger_left_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="0.009" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.05" />
      </inertial>
      <visual>
        <origin xyz="-0.015 0.0155 0.055" rpy="3.14159 -1.57 0" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/pg70/finger_2cm.dae" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="green">
          <color rgba="0 255 0 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="-0.015 0.0155 0.055" rpy="3.14159 -1.57 0" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/pg70/finger_2cm.dae" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="green">
          <color rgba="0 255 0 1"/>
        </material>
      </collision>
    </link>


    <joint name="${name}_finger_right_joint" type="prismatic" >
      <mimic joint="${name}_finger_left_joint" multiplier="1" offset="0"/>
      <parent link="${name}_gripper_link" />
      <child link="${name}_finger_right_link" />
      <limit effort="100" lower="-0.001" upper="0.033" velocity="0.01"/>
      
      <origin xyz="0 -0.009 ${0.078}" rpy="-0 0 0"/>
      <axis xyz="0 -1 0" />
    </joint>

    <link name="${name}_finger_right_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.05" />
      </inertial>
      <visual>
        <origin xyz="0.015 -0.0155 0.055" rpy="3.14159 -1.57 3.14159" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/pg70/finger_2cm.dae" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="red">
          <color rgba="255 0 0 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.015 -0.0155 0.055" rpy="3.14159 -1.57 3.14159" />
        <geometry>
          <mesh filename="package://schunk_description/meshes/pg70/finger_2cm.dae" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="red">
          <color rgba="255 0 0 1"/>
        </material>
      </collision>
    </link>

  <!-- extensions -->
  <xacro:schunk_pg70_gazebo name="${name}" />
  <xacro:schunk_pg70_transmission name="${name}" />


  </xacro:macro>
</robot>

